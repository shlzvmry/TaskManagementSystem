/* 标签控件样式 */
TagWidget {
    background-color: transparent;
}

TagWidget QPushButton {
    background-color: #657896;
    color: white;
    border: none;
    border-radius: 12px;
    padding: 4px 12px;
    font-size: 11px;
    font-weight: normal;
    min-height: 24px;
}

TagWidget QPushButton:hover {
    background-color: #4a5a6d;
}
