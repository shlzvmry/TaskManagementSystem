/* 优先级控件样式 */
PriorityWidget QPushButton {
    background-color: #657896;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 11px;
    font-weight: normal;
}

PriorityWidget QPushButton[priority="0"] {
    background-color: #FF4444;
}

PriorityWidget QPushButton[priority="1"] {
    background-color: #FF9900;
}

PriorityWidget QPushButton[priority="2"] {
    background-color: #4CAF50;
}

PriorityWidget QPushButton[priority="3"] {
    background-color: #9E9E9E;
}

PriorityWidget QPushButton:hover {
    background-color: #4a5a6d;
}

PriorityWidget QPushButton:checked {
    border: 2px solid white;
}

PriorityWidget QPushButton[priority="0"]:hover {
    background-color: #FF6666;
}

PriorityWidget QPushButton[priority="1"]:hover {
    background-color: #FFAA33;
}

PriorityWidget QPushButton[priority="2"]:hover {
    background-color: #66BB6A;
}

PriorityWidget QPushButton[priority="3"]:hover {
    background-color: #BDBDBD;
}

